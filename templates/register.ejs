<!doctype html>
<html lang="en">

<head>
	<meta charset="utf-8" />
	<title>Random Adoption Center</title>
	<style>
		body {
			background-color:lightgrey;
		}
	 </style>
</head>

<body>
	<h1>Random Adoption Center</h1>
	<form action="/registerSuccess" method="post">
		<fieldset>
            <label><b>Name: </b></label>
            <input type="text" name="name"/>

			<label><b>Email Address: </b></label>
            <input type="email" name="email">
            <br><br>
            
            <label><b>Age: </b></label>
            <input type="text" name="age">
            <br><br>

            <label><b>Additional Information: </b></label><br>
            <textarea rows="5" cols="80" name="addInfo"></textarea>
            
		</fieldset>

		<br>
		<input type="reset">
		<input type="submit" value="Submit">
	</form>
	<hr>
	<a href="/">HOME</a>

	<script>
		window.onsubmit = () => {
			let msg = "Are you sure you want to submit your registration?\n";
			msg += "You will not be able to change your information once submitted.";
			return window.confirm(msg);
		};
	</script>
</body>

</html>